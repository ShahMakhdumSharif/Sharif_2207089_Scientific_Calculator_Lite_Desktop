<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.calculator.controller.LimitOperationsController">
   <children>
      <VBox spacing="8.0" layoutX="14.0" layoutY="14.0">
         <children>
            <Label fx:id="targetUserLabel" text="Limit operations for: " />
            <Label text="Click an operation to assign it to the user (this will ask the user to perform that operation on next login)." wrapText="true" />
            <GridPane hgap="8" vgap="8">
               <columnConstraints>
                  <fx:define />
               </columnConstraints>
               <children>
                  <Button fx:id="opAdd" text="+" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <Button fx:id="opSub" text="-" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  <Button fx:id="opMul" text="*" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                  <Button fx:id="opDiv" text="/" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                  <Button fx:id="opSqrt" text="sqrt(x)" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <Button fx:id="opPower" text="x^" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Button fx:id="opMatrix" text="MATRIX" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                  <Button fx:id="opPolynomial" text="POLYNOMIAL" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                  <Button fx:id="opLinear" text="LINEAR" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                  <Button fx:id="opX10" text="*10^x" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Button fx:id="opClear" text="Clear assigned" GridPane.columnIndex="3" GridPane.rowIndex="2" />
               </children>
            </GridPane>
            <Button fx:id="backButton" text="Back" />
         </children>
         <padding>
            <Insets top="8" right="8" bottom="8" left="8" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
