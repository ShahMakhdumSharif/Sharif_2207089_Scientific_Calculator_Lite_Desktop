<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="8" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.calculator.controller.PowerDialogController" alignment="CENTER" prefWidth="300">
  <children>
    <Label text="Power x^y" style="-fx-font-size:16px;-fx-font-weight:bold;" />
    <HBox spacing="8" alignment="CENTER">
      <Label text="Base:" />
      <TextField fx:id="baseField" prefWidth="120" />
    </HBox>
    <HBox spacing="8" alignment="CENTER">
      <Label text="Exponent:" />
      <TextField fx:id="expField" prefWidth="120" />
    </HBox>
    <HBox spacing="8" alignment="CENTER">
      <Button text="OK" onAction="#onOk" />
      <Button text="Cancel" onAction="#onCancel" />
    </HBox>
  </children>
</VBox>
