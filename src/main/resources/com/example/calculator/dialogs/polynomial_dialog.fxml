<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="8" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.calculator.controller.PolynomialDialogController" alignment="CENTER" prefWidth="380">
  <children>
    <Label text="Polynomial" style="-fx-font-size:16px;-fx-font-weight:bold;" />
    <HBox spacing="8" alignment="CENTER">
      <Label text="Degree:" />
      <ChoiceBox fx:id="degreeChoice" prefWidth="80" />
    </HBox>
    <GridPane hgap="6" vgap="6">
      <children>
        <Label text="c0" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="c0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Label text="c1" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="c1" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label text="c2" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="c2" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Label text="c3" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="c3" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      </children>
    </GridPane>
    <HBox spacing="8" alignment="CENTER">
      <Label text="x=" />
      <TextField fx:id="xField" prefWidth="100" />
    </HBox>
    <HBox spacing="8" alignment="CENTER">
      <Button text="OK" onAction="#onOk" />
      <Button text="Cancel" onAction="#onCancel" />
    </HBox>
  </children>
</VBox>
