<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="8" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.calculator.controller.MatrixDialogController" alignment="CENTER" prefWidth="400">
  <children>
    <Label text="Matrix Operation" style="-fx-font-size:16px;-fx-font-weight:bold;" />
    <HBox spacing="8" alignment="CENTER">
      <Label text="Size:" />
      <ChoiceBox fx:id="sizeChoice" prefWidth="80" />
      <Label text="Op:" />
      <ChoiceBox fx:id="opChoice" prefWidth="120" />
    </HBox>
    <Label text="Matrix A" />
    <GridPane fx:id="gridA" hgap="4" vgap="4" />
    <Label text="Matrix B" />
    <GridPane fx:id="gridB" hgap="4" vgap="4" />
    <HBox spacing="8" alignment="CENTER">
      <Button text="OK" onAction="#onOk" />
      <Button text="Cancel" onAction="#onCancel" />
    </HBox>
  </children>
</VBox>
